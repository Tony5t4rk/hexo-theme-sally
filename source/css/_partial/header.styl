#header {
  position: fixed;
  top: 0;
  left: 310px;
  width: calc(100% - 310px);
  min-width: 600px;
  height: 56px;
  // padding: 0 0;
  display: flex;
  // flex-direction: row;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
  box-shadow: 3px 5px 3px rgba(188, 188, 188, 0.3);
  background-color: rgb(250, 250, 250);
  border-left: 0.6px solid rgba(188, 188, 188, 0.5);
  // border: 1px solid black;
}

#site-title {
  font-size: 1.4rem;
  margin-left: 36px;
  font-family: 'Pacifico', cursive;
}

#site-logo {
  display: inline-block;
  width: 40px;
  margin: 40px 6px 0 16px;
  // border: 1px solid black;
}

#logo {
  margin: 0;
  padding: 0;
}

#logo p {
  // color: rgb(0, 0, 0);
  line-height: 56px;
  display: inline-block;
  position: relative;
  top: -8px;
}

#menu {
  margin: 0;
  padding: 0;
}

.menu-item {
  display: inline-block;
  margin-right: 36px;
}
