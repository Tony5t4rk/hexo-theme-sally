#side {
  margin: 0;
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 310px;
  z-index: 1;
  box-shadow: 5px 0 5px rgba(188, 188, 188, 0.3);
  background-color: rgb(250, 250, 250);
  // border: 1px solid black;
}

#search {
  height: 56px;
  width: 100%;
  border-bottom: 0.6px solid rgba(188, 188, 188, 0.5);
  // border: 1px solid black;
}

#search-logo {
  display: inline-block;
  width: 28px;
  margin: 12px 10px 10px 40px;
  cursor: pointer;
}

#search-input {
  display: inline-block;
  line-height: 26px;
  position: relative;
  top: -20px;
  left: 5px;
  width: 170px;
  height: 26px;
  border: 0;
  border-radius: 5px;
  // background-color: rgb(250, 250, 250);
  border-bottom: 2px solid rgba(26, 115, 232, 0.5);
  outline: none;
}

#author-info {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 402px;
  text-align: center;
  border-bottom: 1px solid rgba(188, 188, 188, 0.5);
  // border: 1px solid black;
}

#info-logo {
  margin: 50px 91px 3px 91px;
  width: 128px;
  padding: 2px;
  border: 1.2px solid rgb(226, 226, 226);
  // border: 1px solid black;
}

#info-author {
  margin: 0 0 20px 0;
  padding: 0;
  font-family: 'Pacifico', cursive;
  font-size: 1.2em;
  display: inline-block;
}

.social-item {
  width: 130px;
  height: 46px;
  margin: 15px 5px 0 17px;
  padding: 0;
  display: inline-block;
  position: relative;
  float: left;
  align-items: center;
  border-left: 1px solid rgba(188, 188, 188, 0.5);
  // border: 1px solid black;
}

.social-img {
  width: 40px;
  position: absolute;
  top: 3px;
  left: 20px;
}

.social-item-name {
  margin: 0 0 0 60px;
  line-height: 46px;
  display: inline-block;
  // border: 1px solid black;
}

#friend {
  width: 310px;
  height: calc(100% - 500px);
  // border: 1px solid black;
}

.friend-item:first-child {
  margin-top: 12px;
}

.friend-item {
  padding: 0;
  height: 40px;
  width: 100%;
  text-align: center;
  // border: 1px solid black;
}

.friend-item-name {
  margin: 6px 0 0 0;
  display: inline-block;
  line-height: 40px;
}
