#index-posts {
  margin: 0;
  padding: 45px;
  min-width: 600px;
  background-color: rgba(250, 249, 222, 0.2);
  // border: 1px solid black;
}

.index-post:first-child {
  margin-top: 0;
}

.index-post:last-child {
  margin-bottom: 0;
}

.index-post {
  margin: 36px 0;
  padding: 16px;
  border-radius: 6px;
  background-color: rgb(250, 250, 250);
  border: 0.6px solid rgba(220, 220, 220, 0.4);
  box-shadow: 0 0 10px rgba(188, 188, 188, 0.3);
  // border: 1px solid black;
}

.index-post-title {
  // font-family: ;
  font-size: 2.1rem;
}
